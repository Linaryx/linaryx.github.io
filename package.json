{
  "name": "ruinateam",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.0",
  "imports": {
    "#internal/nuxt/paths": "./node_modules/@nuxt/nitro-server/dist/runtime/utils/paths"
  },
  "scripts": {
    "dev": "nuxt dev",
    "clean": "bun scripts/clean-output.ts",
    "build": "bun run clean && nuxt generate",
    "preview": "sirv dist/public -p 4173",
    "preview:build": "bun run build && bun run preview",
    "fetch:data": "bun scripts/fetch-data.ts",
    "scan:roles": "bun scripts/scan-roles.ts",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "bun run lint && bun run typecheck && bun run build"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.91.1"
  },
  "devDependencies": {
    "@nuxt/content": "^2.13.4",
    "@biomejs/biome": "^1.9.4",
    "nuxt": "^3.21.0",
    "sirv-cli": "^2.0.2",
    "typescript": "^5.7.3"
  }
}
